{% extends "layouts/base.njk" %}

{% block after %}
{% set timelineData %}
{
  "title": {
    "text": {
      "headline": "Cronologia da arquitetura doméstica",
      "text": "<p>Todas as {{ collections.casa | length }} casas em ordem cronológica</p>"
    },
    "background": {
      "url": "https://i.pinimg.com/originals/f7/76/49/f7764902ee90d4fc48b6f795307bc366.jpg",
      "alt": "Abigail de Andrade, Estrada do Mundo Novo, 1888"
    }
  },
  "events": [
  {% for casa in collections.casa %}
    {
      "media": {
        "url": "{{ casa.data.header.teaser }}",
        "caption": "{{ casa.data.header.caption }}",
        "link": "{{ casa.url }}"
      },
      {% for event in casa.data.coverage.temporal %}
        {% if event.type == "creation" %}
            "start_date": {
              "year": "{{ event.start_date.year }}"
            },
            {% if event.display_date %}
            "display_date": "{{ event.display_date }}",
            {% endif %}
        {% endif %}
      {% endfor %}
      "text": {
        "headline": "{{ casa.data.title }}",
        "text": "<div></div><p>{{ casa.data.excerpt }}</p>"
      }
    }{% if not loop.last %},{% endif %}
  {% endfor %}
  ]
}
{% endset %}
<div class="container-fluid text-center mb-5">
  {% include "partials/timeline.njk" %}
</div><!--/.container-fluid-->
{% endblock %}
